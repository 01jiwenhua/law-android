<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_topbar"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_law"
        android:background="@color/colorWhite"
        style="@style/TabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMinWidth="80dp"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/et_keyworld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/ic_main_search"
            android:drawableLeft="@drawable/ic_top_search"
            android:drawablePadding="5dp"
            android:hint="请输入关键字"
            android:padding="5dp"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_countryLayList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
