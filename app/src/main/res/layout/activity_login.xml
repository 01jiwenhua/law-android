<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_topbar" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市危化法规标准查询系统"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/textsize_18"
        />
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="请输入手机号"
        android:background="@null"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/textsize_18"
        android:drawablePadding="13dp"
        android:drawableLeft="@drawable/ic_phone"
        android:inputType="phone"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorLine"
        android:layout_marginTop="18dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        >


        <EditText
            android:id="@+id/et_verifyCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:background="@null"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_auth"
            android:drawablePadding="13dp"
            android:textSize="@dimen/textsize_18"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_verifyCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="获取验证码"
            android:textColor="@color/colorTextDark"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textsize_16"
            android:background="@drawable/bg_gray_corner"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorLine"
        android:layout_marginTop="18dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_blue_blue_corner"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_blue_corner"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlue"
        />

    <include layout="@layout/layout_placeview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回帐号？"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorGray"
        />
</LinearLayout>