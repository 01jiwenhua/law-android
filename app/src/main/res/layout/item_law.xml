<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
    android:id="@+id/tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    android:text="危险化学品安全管理条例"
    android:textColor="#2A2A30"
    android:textSize="@dimen/textsize_18" />


<TextView
    android:id="@+id/tv_des"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:text="为了加强对危险品的管理，保证危险品运输、贮藏、使用安全，服务企业的生产、试验、化验等需要…"
    android:textColor="#FF676767"
    android:textSize="@dimen/textsize_14" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="国务院令第445号"
            android:textColor="#A8A8A8"
            android:textSize="@dimen/textsize_14" />
        <include layout="@layout/layout_placeview"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2016-02-03"
            android:textColor="#A8A8A8"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#FFE9ECEF"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    />
</LinearLayout>